{
    "name": "BeamShare",
    "short_name": "BeamShare",
    "description": "Chia sẻ file nhanh chóng giữa các thiết bị",
    "icons": [
        {
            "src": "/public/img/favicon.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "/public/img/favicon.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "background_color": "#ffffff",
    "start_url": "./",
    "display": "standalone",
    "theme_color": "#e74c3c",
    "share_target": {
        "action": "/",
        "method":"POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [{
                "name": "allfiles",
                "accept": ["*/*"]
            }]
        }
    },
    "launch_handler": {
        "client_mode": "focus-existing"
    }
}
